!!!
%html
	%head
		%meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
		%meta{:content => "contact list", :name => "description"}
		%meta{:content => "contact-list contacts address phone-number mobile", :name => "keywords"}
		%meta{:charset => "utf-8"}
		%meta{:content => "array101", :name => "author"}

		/[if IE]
		%meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/

		%meta{:content => "width=device-width, height=device-height, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=0", :name => "viewport"}

		/ Favicons
		%link{:href => asset_path("conxjobsv2/favicon.ico"), :rel => "shortcut icon"}

		%title ContactList
		= csrf_meta_tags
		= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
		= javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
	%body
		.container
			%nav.navbar.navbar-inverse.navbar-fixed-top
				.container
					.navbar-header
						%button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
							%span.sr-only Toggle navigation
							%span.icon-bar
							%span.icon-bar
							%span.icon-bar
						%span
							%a.navbar-brand{:href => root_path} contact-list
							= link_to new_contact_path, :class => 'btn btn-default navbar-btn btn-primary btn-medium' do
								%i.fa.fa-plus
								%span Add Contact
					#navbar.navbar-collapse.collapse
						.navbar-form.navbar-right
							= form_tag search_path, method: 'get' do
								= text_field_tag :query, params[:query], :class => 'form-control', placeholder: 'Search for contact'
								= submit_tag "Search", :class => 'btn btn-success'
			%br
			%br
			%br
			%br
			.container
				- unless current_page?(root_path)
					%ol.breadcrumb
						= render_breadcrumbs :tag => :li, :separator => ""
				= yield
			%hr/
			%footer
				%p.pull-right Â© 2017
